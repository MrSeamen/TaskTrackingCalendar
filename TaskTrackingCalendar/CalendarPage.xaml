        mc:Ignorable="d"
        Title="CalendarPage" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Closing="OnClose">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5.5*"/>
        </Grid.RowDefinitions>
        <StackPanel Name="MonthYear" Margin="10" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
            <!-- Displays Top Row Stuff: Month and Summary Page button -->
            <!--Main Calendar Page. Should have buttons for forward and backward. 
                                Should display month and calendar boxes-->
            <Button Margin="10" Padding="5" Click="backwardMonth" Height="30" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left">
                <TextBlock Text="Last Month" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
            <!---Month Name-->
            <TextBlock Name="Month" VerticalAlignment="Top" HorizontalAlignment="Center" Text="" FontSize="18" FontWeight="Bold" Margin="10"/>
            <!---Year -->
            <TextBlock Name="Year" VerticalAlignment="Top" HorizontalAlignment="Center" Text="{Binding currentYear, UpdateSourceTrigger=PropertyChanged}" FontSize="18" FontWeight="Bold" Margin="10"/>
            <Button Margin="10" Padding="5" Click="forwardMonth" Height="30" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right">
                <TextBlock Text="Next Month" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Center">
            <!--Side bar with button to go back to previous page. Could add other buttons as well?-->
            <Button Margin="5" Padding="5" Click="OnOpenSummary" Height="30" Width="100">
                <TextBlock Text="Summary Page" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
        </StackPanel>
